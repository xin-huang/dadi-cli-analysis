import os
import numpy as np


##### Configs #####


dataset = config["dataset"]
chr_num = config["chr_num"]
input_prefix = config["input_prefix"]
input_extension = config["input_extension"]
output_prefix = config["output_prefix"]
ref_gene = config["ref_gene"]

chr_name_list = [c+1 for c in range(chr_num)]


def get_input_vcf(wildcards):
    return os.path.join(
        "results/{dataset}/data/",
        f"{input_prefix}.chr{wildcards.chr_name}.{input_extension}"
    )


##### Target rules #####

rule all:

        expand("results/{dataset}/annotated_snps/{output_prefix}.chr{chr_name}.annotated.biallelic.snps.{ref_gene}_multianno.vcf.gz",
               dataset=dataset, output_prefix=output_prefix, chr_name=chr_name_list, ref_gene=ref_gene)
